{
  "files.autoSave": "onFocusChange",
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    }
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "files.exclude": {
    "_site/**": true
  },
  "files.insertFinalNewline": true,
  "markdown.styles": [".vscode/custom-tag-style.css"],
 	"foam.openDailyNote.directory": "_posts",
 	"foam.openDailyNote.filenameFormat": "yyyy-mm-dd-'daily-note'",
 	"foam.openDailyNote.fileExtension": "md",
	"foam.openDailyNote.titleFormat": "fullDate",
}
